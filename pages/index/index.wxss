page {
    height: 100%;
}

/* 导航 */

.navbar {
    display: flex;
    background: #fff;
    height: 9%;
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 100rpx;
    font-size: 36rpx;
}

.navbar .item.active {
    color: #16a085;
}

.navbar .item.active:after {
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: #16a085;
}

/* 分类 */

.categories_container {
    width: 100%;
    height: 81%;
}

.categories_scroll_view {
    width: 100%;
    height: 100%;
}

.categories {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
}

.category_container {
    width: 33.333%;
    height: 250rpx;
    padding: 20rpx;
    box-sizing: border-box;
}

.category_swiper {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
}

.category_swiper.none {
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
    box-shadow: 0rpx 5rpx 5rpx #e0e0e0 ;
}

.category_swiper.current {
    box-shadow: 0px 5px 5px #E3F2FD;
}

.category_inner {
    width: 100%;
    height: 100%;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx
}

.category_dot_box {
    height: 56rpx;
    width: 56rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.category_dot {
    width: 30rpx;
    height: 30rpx;
    border-radius: 50%;
}

.category_title {
    padding-top: 5rpx;
    font-size: 36rpx;
    color: #212121;
}

.category_num {
    padding-top: 5rpx;
}

.category_delete {
    height: 100%;
    line-height: 100%;
    background: #e74c3c;
    color: #ffffff;
    font-size: 40rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-radius: 20rpx;
}

.add_cat_container {
    z-index: 9999;
    position: fixed;
    bottom: 0px;
    left:0px;
    width: 100%;
    height: 10%;
    padding: 30rpx;
    box-sizing: border-box;
    background: #ffffff;
    box-shadow: 0rpx -5rpx 25rpx #e5e5e5;
    align-items: center;
}

.add_category {
    width: 100%;
    font-size: 36rpx;
}

/* 文章 */

.articles {
    width: 100%;
    height: 91%;
    background: #ffffff;
}

.articles_scroll_view {
    height: 100%;
}

.articles_header {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    height: 120rpx;
    padding-left: 30rpx;
    box-shadow: 0rpx 5rpx 5rpx #ecf0f1;
    margin-bottom: 10rpx;
}

.article_category_title {
    padding-left: 30rpx;
    font-size: 40rpx;
}

.articles_empty_view {
    padding-top: 200rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-top: 150rpx;
    width: 100%;
}

.empty_image {
    width: 300rpx;
}

.empty_text {
    font-size: 36rpx;
    color: #757575;
}

.article {
    width: 100%;
    display: flex;
    flex-direction: column;
    box-shadow: 0rpx 5rpx 5rpx #ecf0f1;
    padding-bottom: 10rpx;
    margin-bottom: 10rpx;
    background: #ffffff;
}

.article_main {
    width: 100%;
    height: 340rpx;
}

.article_swiper {
    width: 100%;
    height: 100%;
}

.article_info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-top: 20rpx;
    padding-left: 30rpx;
    padding-right: 25rpx;
    padding-bottom: 20rpx;
}

.article_title {
    font-size: 33rpx;
    color: #212121;
    line-height: 45rpx;
    max-height: 135rpx;
    overflow: hidden;
}

.article_abstract {
    font-size: 30rpx;
    color: #555555;
    padding-top: 20rpx;
    overflow: hidden;
    line-height: 40rpx;
    max-height: 160rpx;
}

.article_image_wrapper {
    width: 280rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-right: 30rpx;
}

.article_image {
    width: 240rpx;
    height: 280rpx;
    border-radius: 10rpx;
}

.article_options {
    display: flex;
    width: 100%;
    flex-direction: row;
    align-items: center;
}

.article_icon_box {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 25%;
}

.article_additional {
}

.article_tags {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.article_tag {
    display: inline-block;
    font-size: 28rpx;
    padding: 0 15rpx;
    height: 50rpx;
    line-height: 50rpx;
    color: #7f8c8d;
    border: 1px solid #7f8c8d;
    border-radius: 28rpx;
    word-break: keep-all;
    margin-bottom: 15rpx;
    margin-right: 15rpx;
}

.article_share {
    text-align: right;
    height: 50rpx;
    line-height: 50rpx;
    padding-top: 15rpx;
    padding-right: 30rpx;
    font-size: 30rpx;
    color: #3498db;
}

.floating_buttons_container {
    position: fixed;
    bottom: 40px;
    right: 0px;
    z-index: 9999;
    display: flex;
    flex-direction: row;
}

.floating_button_add {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 40rpx;
    background: #FFC107;
    box-shadow: 0rpx 5rpx 5rpx #FFA000;
}

.floating_button_search {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 40rpx;
    background: #4DB6AC;
    box-shadow: 0rpx 5rpx 5rpx #009688;
}

.floating_button_refresh {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-right: 40rpx;
    background: #ecf0f1;
    box-shadow: 0rpx 5rpx 5rpx #bdc3c7;
}

.floating_button_icon {
    width: 60rpx;
    height: 60rpx;
}
